@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
    Layout = "/Views/Shared/_LayoutAuth.cshtml";
}

<div class="auth-card">
    <div class="text-center mb-4">
        <div class="auth-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <i class="bi bi-envelope-check"></i>
        </div>
        <h2 class="fw-bold">Check Your Email</h2>
        <p class="text-muted">We've sent a confirmation link to your email</p>
    </div>

    <div class="alert alert-success text-center" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        Registration completed successfully!
    </div>

    <div class="card bg-light border-0 mb-3">
        <div class="card-body">
            <p class="mb-2"><strong>Email:</strong> @Model.Email</p>
            <p class="mb-0 text-muted small">
                <i class="bi bi-info-circle me-1"></i>
                Please check your inbox and click the confirmation link to activate your account.
            </p>
        </div>
    </div>

    @if (@Model.DisplayConfirmAccountLink)
    {
        <div class="alert alert-warning" role="alert">
            <p class="mb-2"><strong>For testing purposes:</strong></p>
            <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-sm btn-warning">
                <i class="bi bi-shield-check me-2"></i>Confirm Account Now
            </a>
        </div>
    }

    <div class="text-center mt-4">
        <a asp-page="./Login" class="btn btn-outline-primary">
            <i class="bi bi-box-arrow-in-right me-2"></i>Go to Login
        </a>
    </div>

    <div class="text-center mt-3">
        <p class="text-muted small mb-0">
            Didn't receive the email?
            <a asp-page="./ResendEmailConfirmation" class="text-decoration-none">Resend confirmation</a>
        </p>
    </div>
</div>