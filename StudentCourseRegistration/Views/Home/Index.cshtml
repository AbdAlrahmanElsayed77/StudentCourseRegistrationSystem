@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="hero-section text-center py-5 mb-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="hero-icon mb-4">
                    <i class="bi bi-mortarboard-fill"></i>
                </div>
                <h1 class="display-3 fw-bold mb-3 gradient-text">Welcome to Student Course Registration</h1>
                <p class="lead text-muted mb-4">Manage your academic journey with ease. Register for courses, track your progress, and achieve your educational goals.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex gap-3 justify-content-center">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-person-plus me-2"></i>Get Started
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-lg px-4">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container mb-5">
    <div class="row g-4 justify-content-center">
        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-primary">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <h4 class="mt-3">Manage Courses</h4>
                    <p class="text-muted mb-3">Create, edit, and manage all courses in the system with full control.</p>
                    <a asp-controller="Courses" asp-action="Index" class="btn btn-outline-primary">
                        Go to Courses <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-success">
                        <i class="bi bi-people"></i>
                    </div>
                    <h4 class="mt-3">View Students</h4>
                    <p class="text-muted mb-3">Access student information and monitor their course registrations.</p>
                    <a asp-controller="Admin" asp-action="Students" class="btn btn-outline-success">
                        View Students <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        }
        else if (User.IsInRole("Student"))
        {
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-primary">
                        <i class="bi bi-search"></i>
                    </div>
                    <h4 class="mt-3">Browse Courses</h4>
                    <p class="text-muted mb-3">Explore available courses and find the perfect fit for your academic goals.</p>
                    <a asp-controller="Courses" asp-action="Available" class="btn btn-outline-primary">
                        Browse Now <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-success">
                        <i class="bi bi-journal-check"></i>
                    </div>
                    <h4 class="mt-3">My Courses</h4>
                    <p class="text-muted mb-3">View and manage all your registered courses in one place.</p>
                    <a asp-controller="Courses" asp-action="MyCourses" class="btn btn-outline-success">
                        View My Courses <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-success">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h4 class="mt-3">New Student?</h4>
                    <p class="text-muted mb-3">Create your account and start your educational journey with us today.</p>
                    <ul class="text-start text-muted mb-3">
                        <li>Quick and easy registration</li>
                        <li>Access to all available courses</li>
                        <li>Track your academic progress</li>
                    </ul>
                    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-success btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Register Now
                    </a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="feature-card h-100">
                    <div class="feature-icon bg-primary">
                        <i class="bi bi-box-arrow-in-right"></i>
                    </div>
                    <h4 class="mt-3">Already Registered?</h4>
                    <p class="text-muted mb-3">Login to access your courses and continue your learning experience.</p>
                    <ul class="text-start text-muted mb-3">
                        <li>View your registered courses</li>
                        <li>Register for new courses</li>
                        <li>Manage your profile</li>
                    </ul>
                    <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">
                        <i class="bi bi-box-arrow-in-right me-2"></i>Login
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .hero-section {
        background: linear-gradient(135deg, #667eea15 0%, #764ba215 100%);
        border-radius: 30px;
        margin-top: 20px;
    }

    .hero-icon i {
        font-size: 80px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .gradient-text {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .feature-card {
        padding: 30px;
        border-radius: 20px;
        background: white;
        border: 1px solid #e5e7eb;
        transition: all 0.3s ease;
        text-align: center;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            border-color: #667eea;
        }

    .feature-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }

        .feature-icon i {
            font-size: 35px;
            color: white;
        }

    .btn-lg {
        padding: 12px 30px;
        font-size: 18px;
        border-radius: 12px;
    }
</style>