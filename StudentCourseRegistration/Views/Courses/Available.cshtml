@model IEnumerable<StudentCourseRegistration.Models.ViewModels.AvailableCourseViewModel>

@{
    ViewData["Title"] = "Available Courses";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-book-half"></i> Available Courses
        </h1>
        <a asp-action="MyCourses" class="btn btn-primary">
            <i class="bi bi-journal-check"></i> My Courses
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var course in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 @(course.IsRegistered ? "border-success" : "")">
                        @if (course.IsRegistered)
                        {
                            <div class="card-header bg-success text-white">
                                <i class="bi bi-check-circle"></i> Registered
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title text-primary">@course.CourseId</h5>
                            <h6 class="card-subtitle mb-2">@course.Name</h6>
                            <p class="card-text text-muted" dir="rtl">@course.NameAr</p>

                            @if (!string.IsNullOrEmpty(course.Description))
                            {
                                <p class="card-text small">@course.Description</p>
                            }

                            <div class="mt-3">
                                <span class="badge bg-info me-2">
                                    <i class="bi bi-award"></i> @course.Credits Credits
                                </span>
                                <span class="badge bg-secondary">
                                    <i class="bi bi-calendar"></i> @course.Semester
                                </span>
                            </div>

                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="bi bi-people"></i> @course.RegisteredStudentsCount students enrolled
                                </small>
                            </div>
                        </div>
                        <div class="card-footer">
                            @if (course.IsRegistered)
                            {
                                <button class="btn btn-secondary w-100" disabled>
                                    <i class="bi bi-check-circle"></i> Already Registered
                                </button>
                            }
                            else
                            {
                                <form asp-action="Register" method="post" class="d-inline w-100">
                                    <input type="hidden" name="courseId" value="@course.Id" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-plus-circle"></i> Register Now
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle"></i>
            No courses are currently available for registration.
        </div>
    }
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}