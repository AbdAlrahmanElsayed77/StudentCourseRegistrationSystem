@model IEnumerable<StudentCourseRegistration.Models.ViewModels.StudentListViewModel>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">
            <i class="bi bi-people-fill"></i> Students
        </h1>
    </div>

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Academic Year</th>
                                <th class="text-center">Registered Courses</th>
                                <th>Joined Date</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <strong>@student.FullName</strong>
                                    </td>
                                    <td>@student.Email</td>
                                    <td>@(student.PhoneNumber ?? "N/A")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(student.AcademicYear))
                                        {
                                            <span class="badge bg-primary">@student.AcademicYear</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (student.RegisteredCoursesCount > 0)
                                        {
                                            <span class="badge bg-success fs-6">@student.RegisteredCoursesCount</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0</span>
                                        }
                                    </td>
                                    <td>@student.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <a asp-action="StudentCourses"
                                           asp-route-studentId="@student.Id"
                                           class="btn btn-sm btn-info"
                                           title="View Courses">
                                            <i class="bi bi-eye"></i> View Courses
                                        </a>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted">
                        Total Students: <strong>@Model.Count()</strong>
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i>
                    No students found in the system.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}